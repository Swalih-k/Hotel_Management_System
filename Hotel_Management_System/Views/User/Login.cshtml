@model Log;


@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<section class="vh-50 gradient-custom">
    <form method="post">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <div class="mb-md-5 mt-md-4 pb-5">

                                <h2 class="fw-bold mb-2 text-uppercase">User Login</h2>
                                <p class="text-white-50 mb-5">Please enter your login and password!</p>

                                <div data-mdb-input-init class="form-outline form-white mb-4">
                                    <label class="form-label" asp-for="Email">Email</label>
                                    <input asp-for="Email" class="form-control" placeholder="enter Email " />

                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div data-mdb-input-init class="form-outline form-white mb-4">
                                    <label class="form-label" asp-for="Password">Password</label>
                                    <input asp-for="Password" id="typePasswordX" class="form-control " placeholder="enter Password " />

                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">@* Forgot password? *@</a></p>

                                <button type="submit" asp-for="" asp-controller="User" asp-action="Login" class="btn btn-success">Login</button>





                            </div>


                            <div>
                                <p class="mb-0">
                                    Don't have an account? <a asp-for="" asp-controller="User" asp-action="Register">User Sign Up</a>
                                </p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>

