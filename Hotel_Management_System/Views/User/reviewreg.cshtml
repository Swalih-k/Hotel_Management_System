@model Review;


@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<section class="vh-100 mt-5">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login" />
            </div>
        </div>
    </div>
    <form method="post">
        <div class="container">
            <h1>Register</h1>
            @* <p>Please fill in this form to create an account.</p> *@
            <hr>

          @*   <label asp-for="Reviewid"></label>
            <input asp-for="Reviewid" class="form-control"
                    /> *@
          

            <label asp-for="Reviews"></label>
            <input asp-for="Reviews" class="form-control" placeholder="Enter review" />
            <span asp-validation-for="Reviews" class="text-danger"></span>

            <label class="control-label"></label>
            <select asp-for="Hid" class="form-control" asp-items=@(new SelectList(ViewBag.message,"Hid","HotelName"))>
            </select>

            <label asp-for="Replay"></label>
            <input type="hidden" asp-for="Replay" value="[fill]" class="form-control"  />
           


            <br />


            <hr>

            <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
            <button type="submit" asp-for="" asp-controller="User" asp-action="reviewreg" class="btn btn-success"> Register</button>
        </div>


    </form>
</section>

