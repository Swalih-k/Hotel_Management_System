@model Payment;


@{
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}
<section class="vh-100 mt-5">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login" />
            </div>
        </div>
    </div>
    <form method="post">
        <div class="container">
            <h1>Register</h1>
            @* <p>Please fill in this form to create an account.</p> *@
            <hr>
            <label class="control-label"></label>
            <select asp-for="Uid" class="form-control" asp-items=@(new SelectList(ViewBag.message,"Uid","Name"))>
            </select>

            <label asp-for="AccountNumber"></label>
            <input asp-for="AccountNumber" class="form-control"
                   placeholder="Account Number  type" />
            <span asp-validation-for="AccountNumber" class="text-danger"></span>

            <label asp-for="IFSC"></label>
            <input asp-for="IFSC" class="form-control" placeholder="Enter IFSC" />
            <span asp-validation-for="IFSC" class="text-danger"></span>



            <label asp-for="UPI"></label>
            <input asp-for="UPI" class="form-control" placeholder="Enter UPI" />
            <span asp-validation-for="UPI" class="text-danger"></span>

            <label asp-for="Amount"></label>
            <input asp-for="Amount" class="form-control" placeholder="Enter Amount" />
            <span asp-validation-for="Amount" class="text-danger"></span>

         

           

            <br />
            <label asp-for="Status"></label>
            <input type="hidden" asp-for="Status" value="Payment" />

            <br />


            <br />


            <hr>

            <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
            <button type="submit" asp-for="" asp-controller="Staff" asp-action="Paymentreg" class="btn btn-success"> Register</button>
        </div>


    </form>
</section>

