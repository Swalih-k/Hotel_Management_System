@model ROOM;


@{
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}
<section class="vh-100 mt-5">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login" />
            </div>
        </div>
    </div>
    <form method="post">
        <div class="container">
            <h1>Register</h1>
            @* <p>Please fill in this form to create an account.</p> *@
            <hr>
         

            

            <label asp-for="RoomType"></label>
            <input asp-for="RoomType" class="form-control"
                   placeholder="select a room  type" />
            <span asp-validation-for="RoomType" class="text-danger"></span>

            <label asp-for="Capacity"></label>
            <input asp-for="Capacity" class="form-control" placeholder="Enter capacity" />
            <span asp-validation-for="Capacity" class="text-danger"></span>

            

            <label asp-for="CheckInDate"></label>
            <input asp-for="CheckInDate"   type="date"  /> 
            @* <input type="date" /> *@
            <label asp-for="CheckOutDate"></label>
            <input asp-for="CheckOutDate" type="date"  />
            @* <input type="date" /> *@

            <br />
            <label class="control-label"></label>
            <select asp-for="Hid" class="form-control" asp-items=@(new SelectList(ViewBag.message,"Hid","HotelName"))>
            </select>
            
          
            <br />
           
            <input type="hidden" asp-for="Status" value="Pending" />

            <br />


            <br />


            <hr>

            <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
            <button type="submit" asp-for="" asp-controller="Staff" asp-action="Roomreg" class="btn btn-success"> Register</button>
        </div>


    </form>
</section>

