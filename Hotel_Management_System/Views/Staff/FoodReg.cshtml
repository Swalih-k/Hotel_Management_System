@model Food;


@{
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<section class="vh-100 mt-5">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login" />
            </div>
        </div>
    </div>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container">
            <h1>Register</h1>
            @* <p>Please fill in this form to create an account.</p> *@
            <hr>

            <label asp-for="FoodType"></label>
            <input asp-for="FoodType" class="form-control"
                   placeholder="enter a Type Food" />
            <span asp-validation-for="FoodType" class="text-danger"></span>

            <label asp-for="FoodName"></label>
            <input asp-for="FoodName" class="form-control" placeholder="Enter Food Name" />
            <span asp-validation-for="FoodName" class="text-danger"></span>

            <label asp-for="Time"></label>
            <input asp-for="Time" class="form-control" placeholder="Time" />
            <span asp-validation-for="Time" class="text-danger"></span>
            <br 
            <label asp-for="Suggestion" ></label>
            <input type="hidden" asp-for="Suggestion" value="suggest"  />

            <br />
            <label asp-for="Status" ></label>
            <input type="hidden" asp-for="Status"  value="Pending" />

            <br />


            <hr>

            <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
            <button type="submit" asp-for="" asp-controller="Staff" asp-action="FoodReg" class="btn btn-success"> Register</button>
        </div>

       
    </form>

    </section>

















