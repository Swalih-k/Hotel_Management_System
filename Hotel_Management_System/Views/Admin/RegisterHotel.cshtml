@model Hotel;


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="vh-100 mt-5">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login" />
            </div>
        </div>
    </div>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container">
            <h1>Register</h1>
            
            <hr>

            <label asp-for="HotelName"></label>
            <input asp-for="HotelName" class="form-control"
                   placeholder="enter a Hotel Name" />
            <span asp-validation-for="HotelName" class="text-danger"></span>

            <label asp-for="Location"></label>
            <input asp-for="Location" class="form-control" placeholder="Enter  location" />
            <span asp-validation-for="Location" class="text-danger"></span>

            <label asp-for="Contact"></label>
            <input asp-for="Contact" class="form-control" placeholder="contact" />
            <span asp-validation-for="Contact" class="text-danger"></span>
            

            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="Enter  Email" />
            <span asp-validation-for="Email" class="text-danger"></span>

            <label asp-for="Rating"></label>
            <input asp-for="Rating" class="form-control" placeholder="Enter rating" />
            <span asp-validation-for="Rating" class="text-danger"></span>

            <br />


            <hr>

            <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
            <button type="submit" asp-for="" asp-controller="Admin" asp-action="RegisterHotel" class="btn btn-success"> Register</button>
        </div>


    </form>



















